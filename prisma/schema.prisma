generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  userName String
  email String @unique
  password String
  isBid Boolean
  token Token[]
}


model Token{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  token String @unique
  agent String
  expire DateTime
  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  ownerId String @db.ObjectId
}

model BufferKeys{
  id String @id @default(auto()) @map("_id") @db.ObjectId
  email String @unique
  key String
}